<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_centerVertical="true"
    android:backgroundTint="@color/cardview_dark_background">

    <TextView
        android:id="@+id/root_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contextClickable="false"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Select an option"/>

    <View
        android:id="@+id/root_divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/root_title"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/root_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root_divider"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="@string/title_edit"/>

    <TextView
        android:id="@+id/root_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root_edit"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="@string/title_delete"/>

</RelativeLayout>